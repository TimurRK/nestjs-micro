{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": [
      "../node_modules/@types",
    ],
    "paths": {
      "@shared/*": ["./shared/*"]
    },
  }
}
